@page
@model EmailMaketing.Web.Pages.ContentEmails.IndexModel
@using EmailMaketing.Localization
@using EmailMaketing.Permissions
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Authorization
@inject IStringLocalizer<EmailMaketingResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/ContentEmails/Index.js" />
}
<abp-card>
     <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Letter"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewLetter"
                            text="@L["New Letter"].Value"
                            icon="plus"
                            button-type="Primary" 
                            onclick="location.href='@Url.Action("SendEmailModal","ContentEmails")'"/>
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="LetterTable"></abp-table>
    </abp-card-body>
</abp-card>