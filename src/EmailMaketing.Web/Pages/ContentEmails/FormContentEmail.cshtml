//save email
function getinforemail(){
    vsubject = $("#inputsubject").val();

    let lines = $('#text-runtime').val().split('\n');

    vbody = "";
    let k = lines.length;
    if (k > 0) {
        for(var i = 0;i < k;i++){
            if (i == k - 1) {
                vbody += lines[i];
            }
            else {
                 vbody += lines[i] + "/";
            }
        }
    }
    else {
        vbody = null;
    }
    vfromemail = $("#select-fromemail").text();
    if(vfromemail == "Select Email"){
        vfromemail = null;
    }
    lines = $('#to-recipients').val().split('\n');
    k = lines.length;
    countemailsend = k;
    vtoemail = "";
    if (k > 1) {
        for(var i = 0;i < k;i++){
            if (i == k - 1) {
                vtoemail += lines[i];
            }
            else {
                 vtoemail += lines[i] + ",";
            }
        }
    }
    else {
        vtoemail = null;
    }
}

