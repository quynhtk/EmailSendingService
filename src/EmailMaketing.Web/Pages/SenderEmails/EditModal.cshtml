@page
@model EmailMaketing.Web.Pages.SenderEmails.EditModalModel
@using EmailMaketing.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<EmailMaketingResource> L
@{
    Layout = null;
}

<form method="post" asp-page="/SenderEmails/EditModal">
    <abp-modal>
        <abp-modal-header></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="SenderEmails.Id"/>
            <abp-input asp-for="SenderEmails.Email"/>
            <abp-input asp-for="SenderEmails.Password"/>
            <abp-input asp-for="SenderEmails.CustomerID"/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel| AbpModalButtons.Save)">

        </abp-modal-footer>
    </abp-modal>
</form>